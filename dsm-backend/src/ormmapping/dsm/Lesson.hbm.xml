<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="dsm.Lesson" table="Lesson" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="startTime" column="StartTime" type="timestamp" not-null="false" lazy="false"/>
		<property name="duration" column="Duration" type="integer" length="10" not-null="true" lazy="false"/>
		<property name="state" column="State" type="string" length="255" not-null="false" lazy="false"/>
		<set name="ORM_Students" table="Student_Lesson" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="LessonID" not-null="true"/>
			<many-to-many column="StudentUserID" class="dsm.Student">
			</many-to-many>
		</set>
		<set name="ORM_Categories" table="Lesson_Category" lazy="true" cascade="save-update,lock">
			<key column="LessonID" not-null="true"/>
			<many-to-many column="CategoryID" class="dsm.Category">
			</many-to-many>
		</set>
		<joined-subclass name="dsm.PracticalLesson" table="PracticalLesson" lazy="false">
			<key>
				<column name="LessonID"/>
			</key>
			<property name="isStudentPresent" column="IsStudentPresent" type="boolean" length="1" not-null="true" lazy="false"/>
		</joined-subclass>
		<joined-subclass name="dsm.TheoreticalLesson" table="TheoreticalLesson" lazy="false">
			<key>
				<column name="LessonID"/>
			</key>
			<set name="ORM_Themes" table="Theme_TheoreticalLesson" lazy="true" cascade="save-update,lock" inverse="false">
				<key column="TheoreticalLessonLessonID" not-null="true"/>
				<many-to-many column="ThemeID" class="dsm.Theme">
				</many-to-many>
			</set>
		</joined-subclass>
	</class>
</hibernate-mapping>
